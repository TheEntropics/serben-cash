<div class="col-md-4">
  <h1><%=t 'login.login' %></h1>
  <%= form_tag login_path do %>
    <div class="form-group">
      <label for="username"><%= Credential.human_attribute_name(:username) %></label>
      <%= text_field_tag :username, '', class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for="username"><%= Credential.human_attribute_name(:password) %></label>
      <%= password_field_tag :password, '', class: 'form-control' %>
    </div>
    <%= submit_tag t('login.login'), class: ['btn', 'btn-primary'] %>
  <% end %>
</div>
