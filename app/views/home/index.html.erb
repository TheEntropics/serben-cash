<% @notifications.each do |notification| %>
  <div class="panel panel-primary panel-<%= notification.importance %>">
    <div class="panel-body">
      <%= notification.text %>
    </div>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <% @months.each do |month| %>
        <th><%= month.name %></th>
      <% end %>
      <% if current_user %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @grid.keys.sort_by { |user| "#{user.deleted}|#{user.banned}|#{user.name}" }.each do |user| %>
      <%- cols = @grid[user] %>
      <tr class="<%= 'banned' if user.banned %> <%= 'deleted' if user.deleted %>">
        <td>
          <%= user.name %>
          <small><%= user.username %></small>
          <% user.roles.each do |role| %>
            <span class="label label-info"><%= role.name %></span>
          <% end %>
          <%= '<span class="label label-danger">banned</span>'.html_safe if user.banned %>
          <%= '<span class="label label-danger">deleted</span>'.html_safe if user.deleted %>
        </td>
        <% @months.each do |month| %>
          <% if cols[month] == nil %>
            <td><%= false_mark %></td>
          <% else %>
            <td><%= true_mark %></td>
          <% end %>
        <% end %>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_user_path(user), class: ['btn', 'btn-warning', 'btn-xs'] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>This month <small><%= @current_month.name %></small></h2>
<div class="col-md-9">
  <div class="progress">
    <div class="progress-bar progress-bar-striped <%= 'progress-bar-success' if @current_month_paid >= @total_per_month %>"
         style="width: <%= 100.0*@current_month_paid/@total_per_month %>%;">
      <%= format_currency @current_month_paid %> / <%= format_currency @total_per_month %>
    </div>
  </div>
</div>
<div class="col-md-3">
  <p><%= format_currency @cost_per_user %> per person</p>
</div>
<div class="clearfix"></div>

<h3>Statistics</h3>
<dl class="dl-horizontal">
  <%- num_month = @months.where('"firstDay" <= ?', Date.today).count %>
  <dt>Registered months</dt><dd><%= num_month %></dd>
  <dt>Total amount</dt><dd><%= format_currency @total_balance %></dd>
  <dt>Average per month</dt><dd><%= format_currency @total_balance/num_month %></dd>
  <dt>Delta</dt><dd><%= format_currency @total_balance-@total_per_month*num_month %></dd>
</dl>

<h2>Balance <small>Last 20 records</small></h2>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Details</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @events.last(20).each do |event| %>
      <tr>
        <td><%= format_date event.date %></td>
        <td><%= event.description %></td>
        <td><%= format_currency event.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
