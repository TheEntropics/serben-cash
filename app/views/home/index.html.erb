<h1>Home</h1>
<% unless @notifications.empty? %>
  <h2>Notifications</h2>
  <ul>
    <% @notifications.each do |notification| %>
      <li><%= notification.text %></li>
    <% end %>
  </ul>
<% end %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Username</th>
      <% @months.each do |month| %>
        <th><%= month.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @grid.each do |user, cols| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <% @months.each do |month| %>
          <% if cols[month] == nil %>
            <td>N</td>
          <% else %>
            <td>Y</td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Balance</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Details</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.description %></td>
        <td><%= number_to_currency(event.amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
