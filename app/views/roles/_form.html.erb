        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <%= error_span(@role[:name]) %>
    </div>
  </div></div>
  <div class="clearfix"></div>
  <br>

  <%= f.submit nil, class: 'btn btn-primary' %>
  <%= link_to 'Cancel', roles_path, class: 'btn btn-default' %>

<% end %>
