<div class="page-header">
  <h1><%=t 'roles.role' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= Role.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @role.name %></dd>
</dl>


<br>
<%= link_to t('back'), roles_path, class: 'btn btn-default'  %>
<%= link_to t('edit'), edit_role_path(@role), class: 'btn btn-default' %>
<%= link_to t('destroy'), role_path(@role),
            method: 'delete',
            data: { confirm: t('confirm') },
            class: 'btn btn-danger' %>
