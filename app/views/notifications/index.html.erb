<div class="page-header">
  <h1>Notifications</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= Notification.human_attribute_name(:id) %></th>
    <th><%= Notification.human_attribute_name(:text) %></th>
    <th><%= Notification.human_attribute_name(:importance) %></th>
    <th><%= Notification.human_attribute_name(:elapseDate) %></th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @notifications.each do |notification| %>
    <tr>
      <td><%= link_to notification.id, notification_path(notification) %></td>
      <td><%= notification.text %></td>
      <td><%= notification.importance %></td>
      <td><%= format_date notification.elapseDate %></td>
      <td>
        <%= link_to 'Edit', edit_notification_path(notification), class: 'btn btn-default btn-xs' %>
        <%= link_to 'Destroy', notification_path(notification),
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-xs btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Notification', new_notification_path, class: 'btn btn-primary' %>
