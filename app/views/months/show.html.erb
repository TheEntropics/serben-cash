<div class="page-header">
  <h1>Month</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= Month.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @month.name %></dd>
  <dt><strong><%= Month.human_attribute_name(:firstDay) %>:</strong></dt>
  <dd><%= format_date @month.firstDay %></dd>
</dl>

<br>
<%= link_to 'Back', months_path, class: 'btn btn-default'  %>
<%= link_to 'Edit', edit_month_path(@month), class: 'btn btn-default' %>
<%= link_to 'Destroy', month_path(@month),
            method: 'delete',
            data: { confirm: 'Are you sure?' },
            class: 'btn btn-danger' %>
